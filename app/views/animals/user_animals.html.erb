<div class="container pages-title">
  <h1>My animals</h1>
</div>

<% if @animals.empty? %>
  <p><%= "You have listed no animal yet." %></p>
<% else %>
  <div class="container animals-grid">
      <% @animals.each do |animal| %>
        <%= link_to animal_path(animal) do %>
          <div class="card-animals">
            <% if animal.photo.attached? %>
              <%= cl_image_tag animal.photo.key, height: 300, width: 400, crop: :fill %>
            <% end %>
            <div class="card-animals-infos">
              <div>
                <div>
                  <h3><%= animal.name %></h3>
                  <p><%= animal.species %></p>
                </div>
                <p><%= animal.description %></p>
              </div>
              <h3 class="card-animals-price"><b><%= "#{animal.price_per_day}â‚¬" %></b></h3>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
<% end %>
