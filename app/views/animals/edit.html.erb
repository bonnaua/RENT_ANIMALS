<div class="container basic-container">
  <h2>Edit your animal 🐨</h1>
  <br>
  <%= simple_form_for(@animal) do |f| %>
    <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :species %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :age %>
    <%= f.input :price_per_day %>
    <%= f.input :photo, as: :file %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Edit my animal", class: "btn-ghost btn-devise-form" %>
    </div>
  <% end %>
</div>

