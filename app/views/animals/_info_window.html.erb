        <%= cl_image_tag animal.photo.key, height: 150, width: 200, crop: :fill %>
      <% end %>
    <div class="card-map-infos">
      <div>
        <h2><%= animal.name %></h2>
        <p><%= animal.species %></p>
      </div>
