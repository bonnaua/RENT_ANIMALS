<div class="pages-title">
  <div class="search">
    <input type="text" class="search__input" placeholder="Search something ...">
    <!-- <div class="search__icon">
      <i class="fas fa-search"></i>
    </div> -->
  </div>

  <div class="main-container">
    <div class="animals-grid">
        <% if @animals_search.nil? %>
          <%#= "No result found but you might like these animals" %>
          <% @animals.each do |animal| %>
            <%= link_to animal_path(animal) do %>
              <div class="card-animals">
                <% if animal.photo.attached? %>
                  <%= cl_image_tag animal.photo.key, height: 300, width: 400, crop: :fill %>
                <% end %>
                <div class="card-animals-infos">
                  <div>
                    <h3><%= animal.name %></h3>
                    <p><%= animal.species %></p>
                  </div>
                  <h3><b><%= "#{animal.price_per_day}€" %></b></h3>
                </div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <% @animals_search.each do |animal| %>
            <%= link_to animal_path(animal) do %>
              <div class="card-animals">
                <% if animal.photo.attached? %>
                  <%= cl_image_tag animal.photo.key, height: 300, width: 400, crop: :fill %>
                <% end %>
                <div class="card-animals-infos">
                  <div>
                    <h3><%= animal.name %></h3>
                    <p><%= animal.species %></p>
                  </div>
                  <h3><b><%= "#{animal.price_per_day}€" %></b></h3>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
    </div>

    <div id="map" style="width: 100%;height: 900px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
