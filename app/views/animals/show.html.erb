<div class="container bookings-grid">
  <div class="card-bookings">
    <% if @animal.photo.attached? %>
      <%= cl_image_tag @animal.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <div class="card-bookings-infos">
      <div class="card-bookings-title">
        <h1><%= @animal.name %> - <%= @animal.species %></h1>
        <h3><%= "#{@animal.price_per_day} â‚¬" %></h3>
      </div>
      <div class="card-bookings-description">
        <p><%= @animal.description %></p>
      </div>
      <div class= card-bookings-more-price>
        <% if current_user == @animal.user %>
          <div>
            <h1></h1>
          </div>
          <div class="btn-ghost edit-animal">
            <%= link_to "Edit animal", edit_animal_path(@animal) %>
          </div>
          <div class="btn-ghost edit-animal">
            <%= link_to "Delete animal",
                         animal_path(@animal),
                         method: :delete,
                         data: { confirm: "Are you sure you don't want to rent your pet ?"}  %>
          </div>
        <% else %>
          <div>
            <h1></h1>
          </div>
          <div class=btn-ghost>
            <%= link_to "Book this pet", new_animal_booking_path(@animal) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
